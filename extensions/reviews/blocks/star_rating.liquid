{% assign avg_rating = block.settings.product.metafields.demo.avg_rating.value | round %}
{% assign product_reviews = product.metafields.custom.reviews.value | json_parse %}

{% if avg_rating >= 4 %}
  <br>
  <img src="{{ "thumbs-up.png" | asset_img_url: '15x' }}" height="15" width="15" loading="lazy">
  {{ 'ratings.home.recommendationText' | t }}
{% endif %}

{% if product_reviews %}
  {% for review in product_reviews.reviews %}
  <div class="product-review">
    <h3>{{ product_review_metafield.title }}</h3>
    <p><strong>Rating:</strong> {{ review.rating }}</p>
    <p><strong>Review:</strong> {{ review.body }}</p>
    <p><strong>Author:</strong> {{ review.name }}</p>
    <p><strong>Email:</strong> {{ review.email }}</p>
    <p><strong>Created At:</strong> {{ review.created_at }}</p>
    <p><strong>State:</strong> {{ review.state }}</p>
  </div>
  {% endfor %}
{% else %}
  <p>No review data available.</p>
{% endif %}

{% schema %}
{
  "name": "Star Rating",
  "target": "section",
  "settings": [
    { "type": "product", "id": "product", "label": "product", "autofill": true },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
  ]
}
{% endschema %}

